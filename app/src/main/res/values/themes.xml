<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DrinksAhoy" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="android:textColor">@color/clustered</item>
        <item name="android:windowBackground">@color/dark_grey</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_purple</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/clustered</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/garnet</item>
        <item name="colorSecondaryVariant">@color/copper</item>
        <item name="colorOnSecondary">@color/clustered</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.DrinksAhoy.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DrinksAhoy.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DrinksAhoy.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />
</resources>